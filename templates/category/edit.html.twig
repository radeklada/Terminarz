{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_category_edit'|trans({'%id%': category.id|default('')}) }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col col-lg">
                <h1>{{ 'title_category_edit'|trans({'%id%': category.id|default('')}) }}</h1>
                {{ form_start(form, { method: 'PUT', action: url('category_edit', {id: category.id}), attr: {'novalidate': 'novalidate'} }) }}
                <div class="form-group">
                    {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group row float-sm-right">
                    <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
                </div>
                <div class="form-group row float-sm-left">
                    <a href="{{ url('category_index') }}" class="btn btn-light">
                        {{ 'action_back_to_list'|trans }}
                    </a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}