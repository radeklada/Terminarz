{% extends 'base.html.twig' %}

    {% block title %}
        {{ 'category_list_title'|trans }}
    {% endblock %}

    {% block body %}
        <h1>{{ 'category_list_title'|trans }}</h1>
        {% if pagination is defined and pagination.items|length %}
            <div class="navigation text-center">
                {{ knp_pagination_render(pagination) }}
            </div>

            <table class="table table-striped">
                <thead>
                <tr>
                    <th>{{ knp_pagination_sortable(pagination, 'id'|trans, 'category.id') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'category_name'|trans, 'category.name') }}</th>
                    <th>{{ 'label_actions'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for category in pagination.items %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.name }}</td>
                        <td>
                            <a class="btn btn-primary" href="#{#  {{ url('category_show', {id: category.id}) }}#}"
                               title="{{ 'action_edit'|trans }}">
                                {{ 'action_edit'|trans }}
                            </a>
                            <a class="btn btn-danger" href="#{#  {{ url('category_show', {id: category.id}) }}#}"
                               title="{{ 'action_delete'|trans }}">
                                {{ 'action_delete'|trans }}
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <div class="navigation text-center">
                {{ knp_pagination_render(pagination) }}
            </div>

        {% else %}
            <p>
                {{ 'message_empty_list'|trans }}
            </p>
        {% endif %}
    {% endblock %}