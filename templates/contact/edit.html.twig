{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_contact_edit'|trans({'%id%': contact.id|default('')}) }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col col-lg">
                <h1>{{ 'title_contact_edit'|trans({'%id%': contact.id|default('')}) }}</h1>
                {{ form_start(form, { method: 'PUT', action: url('contact_edit', {id: contact.id}) }) }}
                <div class="form-group">
                    {{ form_row(form.firstName, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.lastName, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.phoneNumber, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group row float-sm-right">
                    <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
                </div>
                <div class="form-group row float-sm-left">
                    <a href="{{ url('contact_index') }}" class="btn btn-light">
                        {{ 'action_back_to_list'|trans }}
                    </a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
