{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_event_create'|trans({'%id%': event.id|default('')}) }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col col-lg">
                <h1>{{ 'title_event_create'|trans }}</h1>
                {{ form_start(form, { method: 'POST', action: url('event_create'), attr: {'novalidate': 'novalidate'} }) }}
                <div class="form-group">
                    {{ form_row(form.title, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group date-container">
                    {{ form_row(form.start_time, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group date-container">
                    {{ form_row(form.end_time, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.category, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group row float-sm-right">
                    <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
                </div>
                <div class="form-group row float-sm-left">
                    <a href="{{ url('event_index') }}" class="btn btn-light">
                        {{ 'action_back_to_list'|trans }}
                    </a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
